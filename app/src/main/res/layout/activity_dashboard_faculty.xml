<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        android:id="@+id/dashbftoolbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:id="@+id/tvdashf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Class"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20dp"/>
    <Spinner
        android:id="@+id/spinner2"
        android:background="@drawable/btnsstroke"
        android:layout_width="match_parent"
        android:entries="@array/classes"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="8dp"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.161" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollViewdashf"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ttdashfcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:background="#fff"
                    android:innerRadius="0dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ttdashf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:maxWidth="60dp"
                            android:maxHeight="60dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/calendar" />

                        <TextView
                            android:id="@+id/ttdashftxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Time Table"
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notifdashfcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:innerRadius="0dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="5dp"
                    android:clickable="true"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/notifdashf"
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:maxWidth="60dp"
                            android:maxHeight="60dp"
                            android:scaleType="fitCenter"

                            app:srcCompat="@drawable/conversation" />

                        <TextView
                            android:id="@+id/notifdashftxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Notices"

                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/attendancefcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:innerRadius="0dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/attendashf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:maxWidth="60dp"
                            android:maxHeight="60dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/test" />

                        <TextView
                            android:id="@+id/attendashftxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Attendance"
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/perfdashfcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:innerRadius="0dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="35dp"
                    android:clickable="true"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/perfdashf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:maxWidth="60dp"
                            android:maxHeight="60dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/performance" />

                        <TextView
                            android:id="@+id/perfdashftxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Performance"
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/examsdashfcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:innerRadius="0dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="35dp"
                    android:clickable="true"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/examsdashf"
                            android:layout_width="14dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:maxWidth="60dp"
                            android:maxHeight="60dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/exam" />

                        <TextView
                            android:id="@+id/examdashftxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Exams"
                            android:textColor="#fff"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    </androidx.core.widget.NestedScrollView>


</LinearLayout>