<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectanglehomescreen"
    android:gravity="center"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/spname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Topic"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Total"
            android:textSize="20sp"
            android:textStyle="bold" />

        <az.plainpie.PieView
            android:id="@+id/pieViewTotal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            plainpie:inner_pie_padding="30"
            plainpie:percentage="75"
            plainpie:percentage_size="10"
            plainpie:inner_text_visibility="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Correct"
            android:textSize="20sp"
            android:textStyle="bold" />

        <az.plainpie.PieView
            android:id="@+id/pieViewCorrect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            plainpie:inner_pie_padding="30"
            plainpie:percentage="75"
            plainpie:percentage_size="10"
            plainpie:inner_text_visibility="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Incorrect"
            android:textSize="20sp"
            android:textStyle="bold" />

        <az.plainpie.PieView
            android:id="@+id/pieViewIncoorect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            plainpie:inner_pie_padding="30"
            plainpie:percentage="75"
            plainpie:percentage_size="10"
            plainpie:inner_text_visibility="true"/>

    </LinearLayout>


</LinearLayout>